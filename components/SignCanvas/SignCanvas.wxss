/* components/SignCanvas/SignCanvas.wxss */
.sign-canvas {
    display: flex;
    width: 100%;
    height: 100%;
}

.sign-canvas canvas {
    display: flex;
    flex: 1;
    height: 100%;
    border: 1rpx solid #000;
    box-sizing: border-box;
}

.sign-btns {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 100%;
    margin-left: 15rpx;
}

.sign-btns .btn {
    width: auto;
    font-weight: normal;
    font-size: 14px;
    padding: 5rpx 10rpx;
    box-sizing: border-box;
}